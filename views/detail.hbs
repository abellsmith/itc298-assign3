<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
{{#if result.action}}
    <h2>{{result.action}} - {{course.course}}</h2>
{{else if course.course}}
    <h2>Edit - {{course.course}}</h2>
{{/if}}

{{#if course.course}}
<form method="POST" action="/add">
    <input type="text" name="course" placeholder="course" value="{{course.course}}" required maxlength="100">
    <input type="text" name="city" placeholder="city" value="{{course.city}}" maxlength="100">

    <button>{{#if course.id}}Update{{else}}Add{{/if}}</button>
    <button>Delete</button>
</form>
{{/if}}

<script>
    $(document).ready(function(){
        var buttons = $('button');
        buttons.on('click', function() {
            var $this = $(this);
            var action = $this.text().toLowerCase();
            if (action == 'update') { action = 'add'; }
            $("form").attr("action", "/"+action);
        });
    });
</script>
</body>